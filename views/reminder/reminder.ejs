
 <head>
  <link href="/css/reminder.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
 </head>
<div class="reminder_wrapper">
  <div class="reminder_container">
    <form id="myForm">
    <div class="medicine_reminder"> 복용약 알림
      <button type="button" id="medicationAdd" class="addBtn1 AddBtn">+</button>
      <% if (typeof mediResult !== 'undefined' && mediResult !== null && mediResult.length > 0) { %>
        <% for (let i = 0; i < mediResult.length; i++) { %>
      <div id="medicationInputs">
        <input type="time" class="symtom-time" value="<%= mediResult[i].medi_reminder_time%>">
      </div>
      <% } %>
      <% } else { %>
        <input type="time" class="symtom-time">
      <% } %>
    </div>
    <br/>
    <div class="medicine_reminder"> 병원일정 알림
      <button type="button" id="hospitalAdd" class="addBtn2 AddBtn">+</button>
      <div id="hospitalInputs">
        <input type="time" class="symtom-time">
      </div>
    </div>
 
         
      <button class="reminder_submitBtn" type="submit" onclick="submitForm(event)">저장</button>
    </form>
  </div>
</div>

<script>
  const medicationAddButton = document.getElementById("medicationAdd");
  const hospitalAddButton = document.getElementById("hospitalAdd");
  const medicationInputs = document.getElementById("medicationInputs");
  const hospitalInputs = document.getElementById("hospitalInputs");

  medicationAddButton.addEventListener("click", function() {
    const input = document.createElement("input");
    input.type = "time";
    input.classList.add("symtom-time");

    medicationInputs.appendChild(input);
  });

  hospitalAddButton.addEventListener("click", function() {
    const input = document.createElement("input");
    input.type = "time";
    input.classList.add("symtom-time");

    hospitalInputs.appendChild(input);
  });
</script>
